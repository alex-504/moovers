
<div class="container my-5">
  <% @bookings.each do |booking| %>
  <div class="container my-3">
    <div class="minimal-container-wrap">
      <div class="minimal-container">
        <div class="element-container">
          <p><%= booking.date_time %></p>
          <p>Name: <%= booking.user.name %></p>
          <p>From: <%= booking.start_point %></p>
          <p>To: <%= booking.end_point %></p>
        </div>
        <div class="element-container">
          <p class="status-button"> <%= booking.status %></p>
          <p>Â¥<%= booking.mover.price %></p>
          <button type="button" class="third-button toggle-btn" data-id="<%= booking.id %>">Details</button>
        </div>
      </div>
    </div>
    <div class="description-wrapper d-none" data-booking-id="<%= booking.id %>">
      <div class="description-top">
        <p>Description: <%= booking.description %></p>
      </div>
      <div class="description-bottom">
        <%= link_to "Call the user", "", class: "third-button"  %>
        <%= link_to "Chat with the user", "", class: "third-button" %>
        <div class="accept">
          <%= simple_form_for booking do |f|%>
            <%= f.input :status, input_html: { value: 'Accepted'}, as: :hidden %>
            <%= f.submit "Accept", class: 'main-button' %>
          <% end %>
          <%= simple_form_for booking do |f|%>
            <%= f.input :status, input_html: { value: 'Rejected'}, as: :hidden %>
            <%= f.submit "Reject", class: 'second-button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% end  %>

</div>










